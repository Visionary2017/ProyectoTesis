<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    android:background="#2196f3"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#0288d1">

        <ImageView
            android:id="@+id/vcImagen"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="6dp"

            />

        <TextView
            android:id="@+id/vcNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Nombre"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:layout_alignTop="@+id/vcImagen"
            android:layout_toEndOf="@+id/vcImagen" />

        <TextView
            android:id="@+id/vcDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripcion"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/vcNombre"
            android:layout_alignStart="@+id/vcNombre" />

        <View
            android:id="@+id/linea"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/vcImagen"
            android:background="#ffc107" />

        <!--
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/compartir"
            android:src="@android:drawable/ic_menu_share"
            android:background="@color/cardview_dark_background"  />
        -->
    </RelativeLayout>

</android.support.v7.widget.CardView>