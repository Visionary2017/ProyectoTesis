<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_fondo_inicio"
    tools:context="pe.edu.sise.proyectotesis.InicioActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_marginTop="320dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/gradient_box"
            android:cursorVisible="true"
            android:onClick="startLogin"
            android:text="@string/btnIrLogin"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:textColor="@color/colorIcons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_box"
            android:textColor="@color/colorIcons"
            android:text="@string/btnIrCatalado"
            android:onClick="startCatalogo"
            android:textAppearance="?android:attr/textAppearanceButton"
            />

    </LinearLayout>

</RelativeLayout>
